{
  "compilerOptions": {
    "declaration": false,
    "esModuleInterop": true, // required
    "module": "ESNext",
    "target": "ESNext",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services"],
      "@commands/*": ["src/discord/commands/*"],
      "@events/*": ["src/discord/events/*"]
    },
  },
  "exclude": ["node_modules", "build", "dist"]
}